  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm start",
      "name": "启动程序",
      "request": "launch",
      "type": "node-terminal"
    },

    {
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "name": "esno",
      "program": "${workspaceFolder}/src/app.ts",
      "request": "launch",
      "restart": true,
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/esno",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },


    {
      "type": "node",
      "request": "launch",
      "name": "当前文件",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
      "program": "${file}",
    }
  ]
}